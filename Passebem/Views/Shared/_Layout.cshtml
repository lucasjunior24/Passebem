<!DOCTYPE html>
<html lang="pt-br" class="green-theme">
<head>
    <meta charset="utf-8" />

    <!--Responsive-->
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!--Bootstrap Core JavaScript-->
    @*<script src="https://cdn.sistemas.ro.gov.br/vendors/bootstrap/v5/js/bootstrap.bundle.min.js"></script>*@

    <!--Jquery-->
    <script src="https://code.jquery.com/jquery-3.6.1.min.js"></script>
    @*<script src="_ ~//vendor/cookie/jquery.cookie.js"></script>*@
    @*<script src="~/wwwroot/vendor/cookie/jquery.cookie.js"></script>*@

    <!-- Sweetalert JS -->
    @*<script src="https://cdn.sistemas.ro.gov.br/vendors/sweetalert/sweetalert2.min.js" integrity="sha384-XC5I7l8BpDWzd1oNwuYTY9tTlxO7QePEuRkq+UyAumtDPvALFJPXVhzjBJXMdLVD" crossorigin="anonymous"></script>*@

    <!--Custom JS-->
    <script src="~/wwwroot/lib/jquery/jquery.min.js"></script>
    <script src="~/Content/js/jquery-teste.js"></script>
    @*<script src="~/wwwroot/js/app.js"></script>*@

    <!--Another JS-->
    @RenderSection("Scripts", required: false)

    <!--PWA-->
    <link href="~/Content/css/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/wwwroot/css/app.css" rel="stylesheet" />

    <meta name="theme-color" content="#00c177" />

    <!--Title-->
    <title>@ViewData["Title"] - Buscador de prestadores de serviço</title>

    <!-- Roboto fonts CSS -->
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&amp;display=swap" rel="stylesheet">

    <!--Mdi Icons-->
    <link href="https://cdn.sistemas.ro.gov.br/vendors/materialdesignicons/css/materialdesignicons.min.css" rel="stylesheet" />

    <!--Bootstrap Core CSS-->
    <link href="https://cdn.sistemas.ro.gov.br/vendors/bootstrap/v5/css/bootstrap.min.css" rel="stylesheet">

    <!-- Sweet Alert -->
    <link href="https://cdn.sistemas.ro.gov.br/vendors/sweetalert/sweetalert2.min.css" rel="stylesheet" />


    <!-- Another CSS -->
    @RenderSection("Pagestyles", required: false)
</head>
<body>
    @*<partial name="_MediaQuery" />*@

    <!--Sidebar-->


    <div class="wrapper">
        <div class="header bg-info">
            <div class="row no-gutters">
                <div class="col-auto d-none d-sm-block mt-1">
                    <button class="btn btn-link menu-btn"><em class="mdi mdi-reorder-horizontal h3" aria-label="Menu"></em></button>
                </div>
                <div class="col text-center">
                    <a href="@Url.Action("Index", "Home")" style="" class="btn btn-primary" title="Ver Clima">

                    </a>
                </div>
                <div class="col-auto">
                    <a href="@Url.Action("Index", "Home")" id="theme-dark" class="btn btn-link position-relative mt-1"><em class="mdi mdi-brightness-6 h3" aria-label="Alto Contraste"></em></a>
                    <a href="#" class="btn btn-link position-relative mt-1"><em class="mdi mdi-bell-outline h3" aria-label="Notificações"></em><span class="counts">9+</span></a>
                </div>
            </div>
        </div>


        <div class="container">
            @RenderBody()
            <partial name="_Footer" />
        </div>

        <footer>
            <partial name="_MenuFooterMobile" />
        </footer>
    </div>

</body>
</html>
