@model Passebem.Models.Cidade

@if (Model != null)
{
<h4 class="m-3 mt-4 text-center">Clima para os proximos 7 dias para a Cidade de @Model.Nome</h4>
<div class="mt-3 d-flex align-items-center justify-content-center ">

    @foreach (var previcoes in Model.PrevicoesDoClima.Take(7))
    {
        <div class="card border border-primary m-1" style="width: 12rem;">
            <div class="card-header bg-primary text-white">
                <h6 id="diaDaSemana">Quarta-Feira</h6>
                <span></span>
            </div>
            <div class="card-body">
                <p class="card-title">Temp. Minima: @previcoes.TemperaturaMinima°</p>
                <p class="card-text">Temp. Maxima: @previcoes.TemperaturaMaxima°</p>
                @*<p class="card-text" >Dia  = <span id="diaDoDia">@previcoes.DataPrevisao.ToString("dd/MM/yyyy")</span></p>*@
            </div>
        </div>
    }

</div>

}

