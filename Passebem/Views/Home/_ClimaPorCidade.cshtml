@model Passebem.Models.Cidade

@if (Model != null)
{
    <div class="mt-3 d-flex align-items-center justify-content-center " >


        @foreach (var previcoes in Model.PrevicoesDoClima.Take(7))
        {
            <div class="card border border-primary m-1" style="width: 12rem;">
                <div class="card-header bg-primary text-white">
                    <h6 id="diaDaSemana"></h6>
                    <span ></span>
                </div>
                <div class="card-body">
                    <p class="card-title">temp. Min = @previcoes.TemperaturaMinima°</p>
                    <p class="card-text">temp. Max = @previcoes.TemperaturaMaxima°</p>
                    <p class="card-text" >Dia  = <span id="diaDoDia" onchange="cadastraNotaImportada('<?=$disciplina['@previcoes.DataPrevisao.ToString("dd/MM/yyyy")'];?>',this.value)"  data-add="@previcoes.DataPrevisao.ToString("dd/MM/yyyy")">@previcoes.DataPrevisao.ToString("dd/MM/yyyy")</span></p>
                </div>
            </div>
        }

    </div>

}

